<h1>Buying "<%=@order.product.title%>"</h1>
<% if @order.status == 'new' %>
  <p>If you have paid already, the response didn't come in yet from LiqPAY. Refresh this page later.</p>
  <%=liqpay_button @liqpay_request %>
<% elsif @order.status == 'success' %>
  <p>Payment succeeded.</p>
<% else %>
  <p>Payment failed.</p>
<% end %>

<% if @order.data %>
  <h2>Order data</h2>
  <pre>
  <% @order.data.each do |key, value| %>
    <%=key%> => <%=value%>
  <% end %>
  </pre>
<% end %>
